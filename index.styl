@import 'reset.styl'

// Defaults
default-color = black
first-color = #FE535F
second-color = #808184
placeholder-color = #b7b6b6
third-color = #EAEAEA
primary-background = white
secondary-background = #f7f6f6
base-font-size = calc(16px + (24 - 16) * (100vmin - 400px)/(30800-400))//inherit //3vmin
//Note: In the example above, 12px is the minimum font-size and 24px is the maximum. 400px is the start of the viewport range and 800px is where it should stop scaling. The inclusion or absence of the units after each value is important.
first-font-family = Lora, serif
second-font-family = Montserrat, sans-serif
between-sections-margin = 5em

// Helpers
set-placeholder-color(n)
  &::-webkit-input-placeholder
    color: n
  &::-moz-placeholder
    color: n
    opacity:  1
  &:-moz-placeholder
    color: n
    opacity:  1
  &:-ms-input-placeholder
    color: n

hide-mobile()
  @media screen and (max-width:1024px)
    display: none !important

hide-desktop()
  @media screen and (min-width:1024px)
    display: none !important

responsive-margins()
  margin = 2em
  margin-left: margin
  margin-right: margin
  @media screen and (min-width: 1024px)
    // margin = 8em
    // margin-left: margin
    // margin-right: margin
    align-self: center
    width: 80vw
    // max-width: 1200px


// Default styles
html
  font-family: second-font-family
  font-size: base-font-size
  color: second-color
  h3
    font-size: 1.5em//1.618em
    font-weight: lighter
  h2
    font-size: 2.5em//2.618em
    font-weight: lighter
  h1
    @media screen and (min-width:1024px)
      font-size: 3.2em//4.236em
body
  margin: 0
  display: flex
  // min-height: 100vh
  flex-flow: column nowrap
  min-height: 100vh
  justify-content: space-between
  h3
    font-weight: lighter
  a, h1, h2, h3, h4, h5, h6, p, hr, input, textarea, select, button, label, fieldset
    font-family: inherit
    color: inherit
    text-decoration: none
    // margin-top: 0
    margin-top: 1em
    &:focus
      outline: none
    &.small
      font-size: .8em

textarea, input, select
  background-color: secondary-background
  set-placeholder-color placeholder-color
input, label, select
  height: 1.5em
input, label, select, textarea
  font-family: first-font-family
input, textarea, select, button, .button
  border: none
  font-size: inherit
  border-radius: 0.8em

button, .button
  color: first-color
  background-color: primary-background
  border: first-color 0.25em solid
  padding: 0.5em
  font-weight: bold
  cursor: pointer
  display: block
  &:active, &.active
    color: white
    background-color: first-color
textarea
  padding: 0.5em
input
  color: second-color
  transition: box-shadow 0.3s, border 0.3s
  &:focus
    box-shadow: 0 0 1em 1px #DDDDDD

// Styles
#thanks
  p
    color: first-color
    font-weight: normal
  .button
    margin-top: 2em
  margin: 2em
main
  display: flex
  flex-flow: column nowrap
  &> * + *
    margin-top: between-sections-margin
.logo
  align-self: center
  max-height: 33vh
  // @media screen and (min-width: 768px)
  //   margin: 1em 0 0
  //   max-height: 25vmin
hr
  color: second-color
.slide
  margin: 0 !important // override slick theme
  .slick-dots  // override slick theme
    bottom: 0.5em
    button:before
      color: white !important
      font-size: 1rem
    li
      margin: 0.5em !important
  h1
    margin: 2.5em 1em
    @media screen and (min-width: 1024px)
      margin: 3em
    color: primary-background
  .item
    height: 60vmin
    min-height: 20em
    background-size: cover
    background-position: center
    @media screen and (min-width:1024px)
      display: flex
      justify-content: flex-end
      align-items: flex-end
  .slide-0
    // h1
    //   margin-top: 1.5em
    background-image: url('img/slide-0.jpg')
  .slide-1
    background-image: url('img/slide-1.jpg')
  .slide-2
    background-image: url('img/slide-2.jpg')

p
  br
    hide-mobile()
.hide-desktop
  hide-desktop()
.show-desktop
  hide-mobile()

.welcome
  color: first-color
  line-height: 1.3
  responsive-margins()
  &>*:first-child
    margin-top: 0
.change
  background: linear-gradient(rgba(0, 0, 0, .2), rgba(0, 0, 0, .2)), url('img/change.png')
  background-size: cover
  display: flex
  justify-content: center
  align-items: center
  > *
    margin: 2em 0
    color: primary-background
    text-align: center

.features
  responsive-margins()
  &> * + *
    margin-top: 4em
  div
    h4
      color: first-color
    img
      max-width: 4em
.footnote
  font-size: 0.65em
  color: first-color
.center
  text-align: center
fieldset
  text-align: center
  border-bottom: none
  border-left: none
  border-right: none
  text-align: center
  font-family: 'Montserrat'
  font-weight: bold
  legend
    padding: 0 1em
    background: white
form
  responsive-margins()
  display: flex
  flex-flow: column nowrap
  .product
    display: flex
    flex-flow: column nowrap
    margin-top: 2em
  .photo-upload-label
    text-align: center
    cursor: pointer
  .file-name
    font-size: 0.5em
  .form-fields
    margin-top: 2em
    @media (min-width: 1250px)
      display: flex
      flex-flow: row wrap
      .form-field
        flex: 0 50%
        &:nth-child(even)
          label
            margin-left: 1em
  .form-field
    display: flex
    align-items: baseline
    label
      flex: 0 0 5em
      color: first-color
      img
        width: 2em
        vertical-align: middle
    input, select
      width: 100%
      padding-left: 0.5em
    .unit
      margin-left: 0.5em
    .toggle
      color: second-color
      border-color: second-color
      &:active
        border-color: first-color
      &.selected
        color: white
        border-color: first-color
        background-color: first-color
      input
        display: none
  .priority
    .form-field
      justify-content: space-around
    .description
      color: first-color
      font-weight: normal
  hr
    border: 1px dashed
    width: 100%
.strong
  font-weight: bold
.step-info
  display: flex
  flex-flow: column nowrap
  align-items: center
  color: first-color
  .step
    font-family: 'Montserrat'
    font-size: 3em
    // margin-top: 0.5em
  .info
    font-weight: bold
    font-style: italic
    font-family: first-font-family
    font-size: 1.2em
    // margin-top: 0.5em
    border-bottom: 0.1em solid
    padding-bottom: 0.2em

.add-other
  display: inline-flex
  align-items: center
  margin-top: 5em
  font-size: .618em
  button
    border: none
    margin: 0
    color: first-color
  .text
    margin-left: 1em
    margin-top: 0
&button[type=submit]
  margin-top: 2em
  color: first-color
  &:active
    color: white

.required:after
  content: "*"
  font-size: 0.5em
  position: absolute
.hidden
  display: none !important
.responsive
  width: 100%
  height: auto
  // margin: 0 auto
header
  display: flex
  justify-content: space-around
  align-items: center
  color: white
  text-align: center
  background-color: first-color
  padding: 1em
  height: 5vmin

footer
  margin-top: between-sections-margin
  padding-bottom: 1em
  > *
    margin-top: 1em
  background: secondary-background
  display: flex
  flex-flow: column
  align-items: center
  font-size: 0.7em
  .title
    color: first-color
  .address
    font-style: italic
  .phone
    span
      color: black
  .email
    color: first-color
    font-weight: bold

.select2-container
    font-family: first-font-family
    .select2-selection--single
      background-color: secondary-background
      border: none
      font-size: inherit
      border-radius: 0.8em
      height: 1.5em
      font-family: inherit;
      .select2-selection__rendered
        line-height: inherit
        height: inherit
        color: inherit;
      .select2-selection__arrow
        height: inherit
    .select2-dropdown
      border: none
      .select2-results__options
        max-height: 15em
      .select2-search__field
        padding-left: 0.5em
        border: none

.call-to-action
  display: flex
  justify-content: center
  background-color: first-color
  text-align: center
  margin-top: 0
  .button
    margin: 1em 0
    padding: 0.5em 10%
  @media screen and (min-width:1024px)
    margin-top: between-sections-margin
    border-radius: 1em
    responsive-margins()

.badges
  display: none
  @media screen and (min-width: 1024px)
    display: flex
    responsive-margins()
  .badge
    border: 1px dashed black
    border-radius: 1em
    flex: 1 1 33%
    &:nth-child(2)
      margin: 0 2em
    text-align: center
    display: flex
    flex-flow: column
    justify-content: center
    align-content: center
    padding: 3em 0
    strong
      color: first-color
    img
      img-max-size = 9vmin
      max-width: img-max-size
      max-height: img-max-size
      margin: auto
    p
      font-weight: 500
      italic
        color: first-color
        font-style: italic
        font-weight: lighter
        font-family: Lora, serif
