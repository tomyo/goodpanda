@import 'reset.styl'

// Defaults
default-color = black
first-color = #FE535F
second-color = #808184
placeholder-color = #b7b6b6
third-color = #EAEAEA
primary-background = white
secondary-background = #f7f6f6
base-font-size = 4vmin//calc(16px + (24 - 16) * (100vmin - 400px)/(800-400))//inherit //3vmin
first-font-family = Lora, serif
second-font-family = Montserrat, sans-serif

// Helpers
set-placeholder-color(n)
  &::-webkit-input-placeholder
    color: n
  &::-moz-placeholder
    color: n
    opacity:  1
  &:-moz-placeholder
    color: n
    opacity:  1
  &:-ms-input-placeholder
    color: n

// Default styles
html
  // min-height: 100vh
  font-family: second-font-family
  font-size: base-font-size
  color: second-color
body
  margin: 0
  display: flex
  // min-height: 100vh
  flex-flow: column nowrap
  min-height: 100vh
  justify-content: space-between
a, h1, h2, h3, h4, h5, h6, p, hr, input, textarea, select, button, label, fieldset
  font-family: inherit
  color: inherit
  text-decoration: none
  margin-top: 1em
  // line-height: 1.5em
  &:focus
    outline: none
textarea, input, select
  background-color: secondary-background
  set-placeholder-color placeholder-color
input, label, select
  height: 1.5em
input, label, select, textarea
  font-family: first-font-family
input, textarea, select, button, .button
  border: none
  font-size: inherit
  border-radius: 0.8em

button, .button
  color: first-color
  background-color: primary-background
  border: first-color 0.25em solid
  padding: 0.5em
  font-weight: bold
  cursor: pointer
  display: block
  &:active, &.active
    color: white
    background-color: first-color
textarea
  padding: 0.5em
input
  color: second-color
  transition: box-shadow 0.3s, border 0.3s
  &:focus
    box-shadow: 0 0 1em 1px #DDDDDD

// Styles

#thanks
  p
    color: first-color
    font-weight: normal
  .button
    margin-top: 2em
  margin: 2em
main
  display: flex
  flex-flow: column nowrap
  &>*
    margin-bottom: 1em
.logo
  width: 75vw
  align-self: center
  margin: 2em
  @media screen and (min-width: 768px)
    margin: 0
  max-height: 100vh
.motto
  font-family: font123583
  text-align: center
  h1
    color: first-color
    .dotcom
      font-weight: normal
  .tagline
    color: second-color
hr
  color: second-color

.slide
  .slick-dots  // override slick theme
    bottom: 0.5em
    button:before
      color: white !important
      font-size: 1rem
    li
      margin: 0.5em !important
  margin-bottom: 0 !important // override slick theme
  h1
    margin: 2em 1.5em
    color: primary-background
  .item
    height: 75vmin
    background-size: cover
  .slide-0
    h1
      margin-top: 1.5em
    background-image: url('img/slide-0.jpg')
  .slide-1
    background-image: url('img/slide-1.jpg')
  .slide-2
    background-image: url('img/slide-2.jpg')


.welcome
  color: first-color
  margin: 0 2em 3em
.change
  background: linear-gradient(rgba(0, 0, 0, .2), rgba(0, 0, 0, .2)), url('img/change.png')
  background-size: cover
  display: flex
  justify-content: center
  align-items: center
  margin-bottom: 0
  h2
    margin: 2em
    color: primary-background
    text-align: center

.features
  margin: 4em 2em 0
  div
    margin-bottom: 4em
    h4
      color: first-color
    img
      max-width: 22vmin
.footnote
  font-size: 0.65em
  color: first-color
.center
  text-align: center
fieldset
  text-align: center
  border-bottom: none
  border-left: none
  border-right: none
  text-align: center
  font-family: 'Montserrat'
  font-weight: bold
  legend
    padding: 0 1em
    background: white
form
  margin: 1em
  display: flex
  flex-flow: column nowrap
  .product
    display: flex
    flex-flow: column nowrap
  .photo-upload-label
    text-align: center
    cursor: pointer
  .file-name
    font-size: 0.5em
  .form-fields
    @media (min-width: 1250px)
      display: flex
      flex-flow: row wrap
      .form-field
        flex: 0 50%
        &:nth-child(even)
          label
            margin-left: 1em
  .form-field
    display: flex
    align-items: baseline
    label
      flex: 0 0 5em
      color: first-color
      img
        width: 2em
        vertical-align: middle
    input, select
      width: 100%
      padding-left: 0.5em
    .unit
      margin-left: 0.5em
    .toggle
      color: second-color
      border-color: second-color
      &:active
        border-color: first-color
      &.selected
        color: white
        border-color: first-color
        background-color: first-color
      input
        display: none
  .priority
    .form-field
      justify-content: space-around
    .description
      color: first-color
      font-weight: normal
  hr
    border: 1px dashed
    margin-top: 2em
    width: 100%
.strong
  font-weight: bold
.step-info
  display: flex
  flex-flow: column nowrap
  align-items: center
  color: first-color
  margin-bottom: 1em
  .step
    font-family: 'Montserrat'
    font-size: 3em
    margin-top: 0.5em
  .info
    font-weight: bold
    font-style: italic
    font-family: first-font-family
    font-size: 1.2em
    margin-top: 0.5em
    border-bottom: 0.1em solid
    padding-bottom: 0.2em

.add-other
  margin-top: inherit
  display: flex
  align-items: center
  button
    border: none
    margin: 0
  .text
    margin-left: 1em

.required:after
  content: "*"
  font-size: 0.5em
  position: absolute
.hidden
  display: none !important
.responsive
  width: 100%
  height: auto
  // margin: 0 auto
header
  display: flex
  justify-content: space-around
  align-items: center
  color: white
  text-align: center
  background-color: first-color
  padding: 1em
  height: 5vmin

footer
  padding-bottom: 1em
  > *
    margin-top: 1em
  background: secondary-background
  display: flex
  flex-flow: column
  align-items: center
  .phone
    span
      color: second-color
  .email
    color: first-color
    font-weight: bold

.select2-container
    font-family: first-font-family
    .select2-selection--single
      background-color: secondary-background
      border: none
      font-size: inherit
      border-radius: 0.8em
      height: 1.5em
      font-family: inherit;
      .select2-selection__rendered
        line-height: inherit
        height: inherit
        color: inherit;
      .select2-selection__arrow
        height: inherit
    .select2-dropdown
      border: none
      .select2-results__options
        max-height: 15em
      .select2-search__field
        padding-left: 0.5em
        border: none

@media only screen and (max-width: 1024px)
  .badges
    display: none
    ~ .call-to-action
      display: none
  .call-to-action
    display: flex
    justify-content: center
    background-color: first-color
    text-align: center
    margin-bottom: 0
    .button
      margin-bottom: 1em
      padding: 0.5em 3em

@media only screen and (min-width: 1024px)
  .call-to-action
    display: none
  .badges
    display: flex
    margin: 0 1em 1em
    .badge
      border: 1px dashed black
      border-radius: 0.5em
      flex: 1 1 33%
      margin: 0 0.25em
      text-align: center
      display: flex
      flex-flow: column
      justify-content: center
      align-content: center
      padding: 60px 0 60px 0
      strong
        color: first-color
      img
        max-width: 12vmin
        max-height: 13vmin
        margin: auto
      p
        font-weight: bold
        font-size: 0.5em
        italic
          color: first-color
          font-style: italic
          font-family: Lora, serif
    ~ .call-to-action
      display: flex !important
      flex-wrap: wrap
      justify-content: center
      background-color: first-color
      text-align: center
      margin: 0rem 1rem 3rem
      border-radius: 0.5em
      font-size: 0.5em
      .button
        margin-bottom: 1em
        padding: 0.5em 3em
